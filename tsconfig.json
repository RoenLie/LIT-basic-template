{
   "compilerOptions": {
      "baseUrl": ".",
      "rootDir": "./src",
      "outDir": "./types",
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "Node",
      "lib": [
         "DOM",
         "ES2020",
         "DOM.Iterable"
      ],
      "types": [
         "vite/client",
      ],
      "paths": {
         "$/*": [
            "src/*"
         ]
      },
      "strict": true,
      "strictPropertyInitialization": false,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "incremental": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noFallthroughCasesInSwitch": true,
      "strictNullChecks": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noImplicitReturns": false,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noEmit": true, // stops the tsc compiler from emitting any files.
      // "declaration": false, // enables or disables d.ts files from being generated.
      // "emitDeclarationOnly": true // makes the compiler only emit .d.ts files.
   },
   "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "typings/**/*.d.ts"
   ],
   "exclude": [
      "dist",
      "node_modules"
   ]
}